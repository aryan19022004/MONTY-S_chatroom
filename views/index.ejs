<!DOCTYPE html>
<html lang="en">
<head>
    <title>Anonymous Chat</title>
    <script src="/socket.io/socket.io.js"></script>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: Arial, sans-serif;
            background-color: #121212;
            color: white;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            overflow: hidden;
        }

        .chat-container {
            width: 100%;
            height: 100vh;
            display: flex;
            flex-direction: column;
        }

        .chat-header {
            background: #4A148C;
            padding: 15px;
            text-align: center;
            font-size: 20px;
            font-weight: bold;
            box-shadow: 0 4px 6px rgba(0,0,0,0.3);
        }

        #chatBox {
            flex: 1;
            overflow-y: auto;
            padding: 20px;
            display: flex;
            flex-direction: column;
            gap: 10px;
        }

        .message {
            max-width: 75%;
            padding: 10px;
            border-radius: 10px;
            font-size: 14px;
            word-wrap: break-word;
            position: relative;
            display: inline-block;
        }

        .user-message {
            background: #7B1FA2;
            align-self: flex-end;
            color: white;
            text-align: left;
            border-top-right-radius: 0;
            margin-left: auto;
        }

        .other-message {
            background: #333;
            align-self: flex-start;
            color: white;
            text-align: left;
            border-top-left-radius: 0;
            margin-right: auto;
        }

        .system-message {
            font-size: 12px;
            color: #bbb;
            text-align: center;
            align-self: center;
        }

        .username {
            font-weight: bold;
            display: block;
            font-size: 12px;
            margin-bottom: 5px;
            color: #FFD700;
        }

        .chat-input {
            display: flex;
            padding: 15px;
            background: #1e1e1e;
        }

        #message {
            flex: 1;
            padding: 12px;
            border: none;
            border-radius: 5px;
            font-size: 16px;
            outline: none;
            background: #333;
            color: white;
        }

        .send-btn {
            background: #7B1FA2;
            color: white;
            border: none;
            padding: 12px 15px;
            margin-left: 10px;
            border-radius: 5px;
            cursor: pointer;
            font-size: 16px;
        }

        .send-btn:hover {
            background: #4A148C;
        }

        @media (max-width: 768px) {
            .chat-container {
                width: 100%;
                height: 100vh;
            }

            .chat-header {
                font-size: 18px;
                padding: 10px;
            }

            .message {
                max-width: 90%;
                font-size: 14px;
                padding: 8px;
            }

            .chat-input {
                flex-direction: column;
                padding: 10px;
            }

            #message {
                font-size: 14px;
                padding: 10px;
            }

            .send-btn {
                font-size: 14px;
                padding: 10px;
                margin-top: 5px;
                width: 100%;
            }
        }
    </style>
</head>
<body>
    <div class="chat-container">
        <div class="chat-header">ðŸ’¬ Monty's chatroom</div>
        <div id="chatBox"></div>
        <div class="chat-input">
            <input type="text" id="message" placeholder="Type a message..." />
            <button class="send-btn" onclick="sendMessage()">Send</button>
        </div>
    </div>

    <script>
        const socket = io();
        const chatBox = document.getElementById("chatBox");

        socket.on("message", (data) => {
            let msg = document.createElement("div");
            msg.classList.add("message");

            if (data.user === "System") {
                msg.classList.add("system-message");
                msg.textContent = data.text;
            } else {
                if (data.user === "You") {
                    msg.classList.add("user-message");
                } else {
                    msg.classList.add("other-message");
                }
                msg.innerHTML = `<span class='username'>${data.user}</span>${data.text}`;
            }

            chatBox.appendChild(msg);
            chatBox.scrollTop = chatBox.scrollHeight; // Auto-scroll
        });

        function sendMessage() {
            const msgInput = document.getElementById("message");
            if (msgInput.value.trim() !== "") {
                socket.emit("chatMessage", msgInput.value);
                msgInput.value = "";
            }
        }
    </script>
</body>
</html>
